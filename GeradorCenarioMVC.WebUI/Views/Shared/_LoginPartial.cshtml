@if (Context.User.Identity.IsAuthenticated)
{
    <div class="header-misc-icon top-account">
        <a href="#" data-bs-toggle="dropdown" data-bs-offset="0,20" data-bs-auto-close="true" aria-haspopup="true" aria-expanded="false">
            <img src="@Url.Action("UserPhotos", "Home" )" height="38" width="38" style="max-width: 38px;" class="alignleft img-circle img-thumbnail my-0" />
        </a>
        <div class="dropdown-menu dropdown-menu-end px-2 m-0">
            <a class="dropdown-item py-2 fw-medium h-bg-tranparent font-primary" href="#">@Context.User.Identity.Name</a>
            <a class="dropdown-item py-2 fw-medium h-bg-tranparent font-primary" href="#"><i class="bi-bag-check me-2"></i>Your Orders</a>
            <a class="dropdown-item py-2 fw-medium h-bg-tranparent font-primary" href="#"><i class="bi-person me-2"></i>Your Profile</a>
            <a class="dropdown-item py-2 fw-medium h-bg-tranparent font-primary" asp-area="" asp-controller="Account" asp-action="Logout"><i class="bi-box-arrow-right me-2"></i>Log Out</a>
        </div>
    </div>
}
else
{    

    <a asp-controller="Account" asp-action="Login"><i class="bi-person-circle"></i></a>    
}


